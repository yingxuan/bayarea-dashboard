{
  "outputDirectory": "dist",
  "headers": [
    {
      "source": "/api/spend/:path*",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "GET,POST,OPTIONS" },
        { "key": "Access-Control-Allow-Headers", "value": "Content-Type" }
      ]
    }
  ],
  "rewrites": [
    { "source": "/api/market", "destination": "/api/market-all?handler=market" },
    { "source": "/api/market-news", "destination": "/api/market-all?handler=market-news" },
    { "source": "/api/quotes", "destination": "/api/market-all?handler=quotes" },
    { "source": "/api/shows", "destination": "/api/market-all?handler=shows" },
    { "source": "/api/youtubers", "destination": "/api/market-all?handler=youtubers" },
    { "source": "/api/:path*", "destination": "/api/:path*" },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}
